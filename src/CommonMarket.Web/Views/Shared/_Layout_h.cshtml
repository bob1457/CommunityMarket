            var images = ['banner1.jpg', 'banner2.jpg', 'banner3.jpg', 'banner4.jpg'];
            $("#banner-content").css({
                'background-image': 'url(/Content/Assets/Images/Banners/' + images[Math.floor(Math.random() * images.length)] + ')'
