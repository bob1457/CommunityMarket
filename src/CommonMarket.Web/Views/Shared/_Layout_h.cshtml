            <div class="text-center">
                <img src="~/Content/Assets/Images/cm_logo_0.png" style="margin-top: 95px;" /></div>
            </div>
        
        <!-- Content Area -->
        <div id="content-wrapper">
            @RenderBody()
        </div>
        
        <!-- Footer Area -->
        <div id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p class="text-left" id="copyright-info">@DateTime.Now.Year &#169; &nbsp; <a href="#">MB Technologies, Inc.</a></p>

