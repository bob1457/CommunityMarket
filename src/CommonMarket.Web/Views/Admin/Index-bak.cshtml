<script type="text/javascript">
    $(document).ready(function () {
        $("#category").hide();
        $("#cover").show();
        $("#dept").hide();
        //$("#pf").addClass("profile-active-button");
        $("#users_roles").hide();

        $("#d_show").click(function () {
            $("#dept").show();
            $("#cover").hide();
            $("#category").hide()
        });
        $("#c_show").click(function () {
            $("#dept").hide();
            $("#cover").hide();
            $("#category").show();
            $("#users_roles").hide();
        });
        $("#u_show").click(function () {
            $("#dept").hide();
            $("#cover").hide();
            $("#category").hide();
            $("#users_roles").show();
        });

    });
</script>

<!-- Add Category -->
<script type="text/javascript">
    $(document).ready(function () {

        //Add
        $('#add').on('shown.bs.modal', function () {
            $('#cate_name').focus()
        })

        $("#go_add").click(function () {
            //alert("add");

            var cateName = $("#cate_name").val();
            var cateDesc = $("#cate_desc").val();
            //debugger; 
            //Ajax call - possibility to create a dedicated ajax layer that accepts the parameters to avoid duplicate ajax code
            //
            $.ajax({
                url: "/Product/AddCategory",
                type: "POST",
                data: {
                    CateName: cateName,
                    CateDesc: cateDesc
                },
                success: function (data) {

                    $('#msg').html(data);
                    $('#msg').delay(5000).fadeOut(400);

                    //var url = "/RolesAdmin/GetAllRoles";
                    //$.get(url, function (data) {
                    //    $("#role_list").html(data);
                    //    return false;
                    //});
                }
            });

            $('#add').modal('hide'); //close the modal
        });


    });
</script>

