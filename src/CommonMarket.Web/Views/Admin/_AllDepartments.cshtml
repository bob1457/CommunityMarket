@model PagedList.IPagedList<CommonMarket.Core.Entities.Department>
@using PagedList.Mvc;

<table id="cate-data" class="table table-responsive table-bordered table-striped panel-heading custom-table" style="padding: 3px; margin-left: 8px; margin-top: 5px; width: 98%;">
    <thead>
    <tr>
        @*<th><input type=" checkbox" id="checkall" /></th>*@
        <th>ID</th>
        <th></th>
        <th>Name</th>
        <th>Descriptioin</th>
        <th style="text-align: center">Edit</th>
        <th style="text-align: center">Delete</th>
    </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><img id="img_sm__@item.Id" src="@Url.Content(@item.DepartmentImgUrl)" title="@item.DepartmentName" style="min-width:30px;" /></td>
                    <td>@item.DepartmentName</td>
                    <td>@item.DepartmentDesc</td>
                    <td style="text-align: center">
                        <p data-placement="top" data-toggle="tooltip" title="Edit"><span class="btn btn-primary btn-xs disabled" data-title="Edit_c" data-toggle="modal" data-target="#ec_@item.Id"><span class="glyphicon glyphicon-tasks"></span></span></p>
                    </td>
                    <td style="text-align: center">
                        <p data-placement="top" data-toggle="tooltip" title="Delete"><span class="btn btn-warning btn-xs disabled" data-title="Delete_c" data-toggle="modal" data-target="#d_@item.Id"><span class="glyphicon glyphicon-remove"></span></span></p>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>
