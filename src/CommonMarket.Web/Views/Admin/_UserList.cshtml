                        //$("#deactivate_@item.Id").hide();

                        $("#deactivate_@item.Id").click(function () {
                            //alert("@item.Id activate

                            $.ajax({
                                url: "/Admin/DeActivateMerchantAccount",
                                type: "POST",
                                data: {
                                    Id: "@item.Id"
                                },
                                success: function (data) {
                                    $('#msg2').html(data);
                                    debugger;
