                        //$("#deactivate_@item.Id").hide();

                        $("#activate_@item.Id").click(function () {
                            //alert("@item.Id activate

                            $.ajax({
                                url: "/Admin/ActivateMerchantAccount",
                                type: "POST",
                                data: {
                                    Id: "@item.Id"
                                },
                                success: function (data) {
                                    $('#msg2').html(data);




                                    debugger;
