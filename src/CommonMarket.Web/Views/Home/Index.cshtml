    <script type="text/javascript">
        $(document).ready(function () {
            $("#search_panel").hide();

            $("#merchant").hide();
            $("#result").hide();

            $("#search").prop('checked', false);

            //debugger;
            $("#search").change(function () {

                var isChecked = $(this).is(':checked');

                //alert(isChecked);

                if (isChecked) {
                    $("#search_panel").show();
                } else {
                    $("#search_panel").hide();
                }
            });

            $("#by_cate").click(function() {

                $("#search_panel").hide();
                $("#merchant").hide();
                $("#category").show();
            });

            $("#by_merchant").click(function () {

                $("#search_panel").hide();

                $("#category").hide();
                $("#merchant").show();
            });
        });
    </script>
