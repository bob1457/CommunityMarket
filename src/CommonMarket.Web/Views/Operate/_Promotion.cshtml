@using CommonMarket.Core.Entities
@model IEnumerable<CommonMarket.Core.Entities.Discount>

<table id="discount-list" class="table table-striped panel-heading custom-table ">
    <thead>
        <tr>
            @*<th><input type="checkbox" id="checkall" /></th>*@
            <th>ID</th>
            <th>Type</th>
            <th>Code</th>
            <th>Descriptioin</th>
            <th>Discount Amount</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th style="text-align: center">Manage</th>
            <th style="text-align: center">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (Model.Count() != 0)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DiscountType</td>
                    <td>@item.PromotionCode</td>
                    <td>@item.DiscountValue</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td></td>
                    <td></td>
                </tr>
            }
            else
            {
                <tr>
                    <td col-span="8">No data</td>
                </tr>
            }
        }
    </tbody>
</table>
